@model List<Actividad4LengProg3.Models.CarreraViewModel>
@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Lista de Carreras</title>
    <style>
        body { font-family: Segoe UI; background: #f5f5f5; padding: 40px; }
        h2 { text-align: center; }
        table { width: 100%; border-collapse: collapse; background: white; }
        th, td { padding: 10px; border: 1px solid #ccc; text-align: left; }
        th { background: #00b4db; color: white; }
        .btn { padding: 5px 10px; border-radius: 5px; }
        .btn-edit { background-color: #ffc107; color: white; }
        .btn-delete { background-color: #dc3545; color: white; }
        .btn-add { background-color: #28a745; color: white; text-decoration: none; padding: 7px 12px; border-radius: 5px; }
    </style>
</head>
<body>
    <h2>Lista de Carreras</h2>
    <p><a href="/Carreras/Create" class="btn-add">+ Agregar Carrera</a></p>
    <table>
        <tr>
            <th>Código</th>
            <th>Nombre</th>
            <th>Créditos</th>
            <th>Materias</th>
            <th>Acciones</th>
        </tr>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Codigo</td>
                <td>@c.Nombre</td>
                <td>@c.CantidadCreditos</td>
                <td>@c.CantidadMaterias</td>
                <td>
                    <a href="/Carreras/Edit/@c.Codigo" class="btn btn-edit">Editar</a> |
                    <a href="/Carreras/Delete/@c.Codigo" class="btn btn-delete">Eliminar</a>
                </td>
            </tr>
        }
    </table>
</body>
</html>